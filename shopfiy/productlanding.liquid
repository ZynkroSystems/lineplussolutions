{% comment %}
  HappySocks Product Landing Section
  Save this as snippets/happysocks-hero.liquid
  Then include it in your product template with: {% render 'happysocks-hero' %}
{% endcomment %}

<style>
  :root{
    --hs-bg:#fff;
    --hs-border:#E8EDF4;
    --hs-ink:#141414;
    --hs-sub:#555;
    --hs-accent:#0f2847;
    --hs-accent-2:#e8f4f8;
    --hs-bullet:#000;
    --hs-radius:20px;
    --hs-radius-inner:16px;
    --hs-font: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }

  .hs-wrap{
    border:1px solid var(--hs-border);
    border-radius:var(--hs-radius);
    background:var(--hs-bg);
    box-shadow:0 6px 24px rgba(10,20,40,.06);
    padding:0;
    font-family:var(--hs-font);
    color:var(--hs-ink);
    -webkit-font-smoothing:antialiased; 
    -moz-osx-font-smoothing:grayscale;
    margin: 0 auto;
    max-width: 1400px;
  }

  .hs-grid{
    display:grid;
    grid-template-columns:1.05fr .95fr;
    gap:0;
    align-items:center;
  }

  .hs-grid > div:first-child{
    padding:40px;
  }

  /* top line */
  .hs-topline{
    display:flex;
    align-items:center;
    gap:10px;
    margin-bottom:10px;
    color:var(--hs-sub);
    font-weight:600;
    flex-wrap:wrap;
  }
  .hs-pill{
    background:#1a1a1a;
    color:#fff;
    border-radius:999px;
    padding:8px 20px;
    font-weight:700;
    font-size:13px;
    letter-spacing:1px;
  }
  .hs-pill::before{content:"✨ ";margin-right:4px;}
  .hs-stars{
    letter-spacing:2px;
    color:#000;
    font-weight:600;
    font-size:16px;
  }

  /* title */
  .hs-title{
    margin:20px 0 30px;
    font-size:clamp(36px,5vw,58px);
    line-height:1.15;
    font-weight:400;
    letter-spacing:-.01em;
  }
  .hs-title i{
    font-style:italic;
    font-weight:500;
  }
  .hs-title i .brand-happy{color:#000;}
  .hs-title i .brand-socks{color:#d4145a;}

  /* bullets */
  .hs-bullets{
    list-style:none;
    padding:0;
    margin:8px 0 40px;
  }
  .hs-bullets li{
    display:flex;
    gap:15px;
    align-items:flex-start;
    margin:18px 0;
    color:#1a1a1a;
    font-size:17px;
    font-weight:400;
    line-height:1.5;
  }
  .hs-bullets .check-icon{
    flex:0 0 24px;
    width:24px;
    height:24px;
    background:var(--hs-bullet);
    border-radius:50%;
    display:flex;
    align-items:center;
    justify-content:center;
    color:#fff;
    font-size:14px;
    margin-top:2px;
  }

  /* CTA */
  .hs-cta{
    display:block;
    width:100%;
    background:var(--hs-accent);
    color:#fff;
    padding:22px 60px;
    border-radius:50px;
    font-weight:700;
    letter-spacing:1px;
    text-align:center;
    text-transform:uppercase;
    transition:.3s all ease;
    font-size:18px;
    text-decoration:none;
  }
  .hs-cta:hover{
    background:#1a3a5f;
    transform:translateY(-2px);
    box-shadow:0 6px 20px rgba(15,40,71,.3);
  }
  .hs-guar{
    margin-top:20px;
    color:#333;
    display:flex;
    gap:10px;
    align-items:center;
    justify-content:center;
    font-weight:400;
    font-size:15px;
  }
  .hs-guar::before{
    content:"✓";
    width:20px;
    height:20px;
    background:#000;
    border-radius:50%;
    display:flex;
    align-items:center;
    justify-content:center;
    color:#fff;
    font-size:12px;
  }

  /* right image card */
  .hs-imgwrap{
    background:linear-gradient(135deg, var(--hs-accent-2) 0%, #d5e8ef 100%);
    border-radius:var(--hs-radius-inner);
    padding:60px 40px;
    text-align:center;
    position:relative;
    min-height:500px;
    display:flex;
    align-items:center;
    justify-content:center;
  }
  .hs-imgwrap img{
    max-width:100%;
    height:auto;
    position:relative;
    z-index:2;
  }
  
  .hs-brand-label{
    position:absolute;
    top:40px;
    right:60px;
    font-size:28px;
    font-weight:700;
    color:var(--hs-accent);
    z-index:3;
  }
  
  .hs-arrow{
    position:absolute;
    top:80px;
    right:50px;
    font-size:40px;
    color:var(--hs-accent);
    transform:rotate(45deg);
    z-index:3;
  }
  
  .hs-swedish-banner{
    position:absolute;
    bottom:0;
    left:0;
    right:0;
    background:var(--hs-accent);
    color:#fff;
    padding:25px 30px;
    font-size:18px;
    font-weight:500;
    text-align:center;
    border-radius:0 0 var(--hs-radius-inner) var(--hs-radius-inner);
  }

  @media (max-width:980px){
    .hs-wrap{padding:0;margin:0 auto;}
    .hs-grid{grid-template-columns:1fr;gap:0;}
    .hs-grid > div:first-child{padding:30px 20px;}
    .hs-title{font-size:clamp(30px,7.5vw,40px);}
    .hs-imgwrap{padding:40px 30px;min-height:400px;}
    .hs-brand-label{font-size:22px;right:40px;}
    .hs-cta{padding:20px 40px;}
  }
</style>

<div class="hs-wrap">
  <div class="hs-grid">
    <!-- LEFT -->
    <div>
      <div class="hs-topline">
        <span class="hs-pill">NEW</span>
        <span class="hs-stars">★★★★★</span>
        <span>4.8/5 based on 1000+ customers</span>
      </div>

      <h1 class="hs-title">
        Our foot-adjusting socks are the perfect solution for both men and women. 
        <i><span class="brand-happy">Happy</span><span class="brand-socks">Socks!</span></i>
      </h1>

      <ul class="hs-bullets">
        <li>
          <span class="check-icon">✓</span>
          Reduces the risk of injuries and pain in the feet
        </li>
        <li>
          <span class="check-icon">✓</span>
          Improved foot position for both men and women
        </li>
        <li>
          <span class="check-icon">✓</span>
          Comfortable solution for better foot alignment in everyday life
        </li>
      </ul>

      <a href="#hs-scroll-to-form" class="hs-cta">Buy Now</a>
      <div class="hs-guar">30-Day Satisfaction Guarantee</div>
    </div>

    <!-- RIGHT -->
    <div class="hs-imgwrap">
      <div class="hs-brand-label">HappyStrumpor</div>
      <div class="hs-arrow">↗</div>
      
      <!-- Replace YOUR-HERO-IMAGE-URL.jpg with your actual image URL -->
      <img src="YOUR-HERO-IMAGE-URL.jpg" alt="HappySocks toe alignment socks">
      
      <div class="hs-swedish-banner">Strumporna som gör att du blir av med smärta!</div>
    </div>
  </div>
</div>

<script>
  // Smooth scroll to product form / add-to-cart
  document.querySelectorAll('.hs-cta').forEach(btn=>{
    btn.addEventListener('click', e=>{
      const target = document.querySelector('form[action*="/cart/add"], .product-form, [name="add"]');
      if(target){ 
        e.preventDefault(); 
        target.scrollIntoView({behavior:'smooth', block:'start'}); 
      }
    });
  });
</script>